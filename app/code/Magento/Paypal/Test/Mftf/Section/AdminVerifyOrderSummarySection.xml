<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminVerifyOrderSummarySection">
        <element name="orderSummary" type="text" selector="//table[@class='data table table-totals']"/>
        <element name="orderSummaryInPlacedOrder" type="text" selector=".{{orderAmount}} td span" parameterized="true"/>
        <element name="quoteOrderSummary" type="text" selector="//tr[@class='{{quote}}']" parameterized="true"/>
        <element name="quoteItems" type="text" selector="//div[@id='items-quoted']"/>
        <element name="taxInvoice" type="text" selector=".order-subtotal-table tbody"/>
    </section>
</sections>
